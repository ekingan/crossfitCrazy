<div id="index">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-2">
	<!-- search bars -->
		    <div class="form-group">
		      <div class="input-group" >
		        <div class="form-inline">
		          <ul class="nav navbar-nav">
		            <li>
		              <%= form_tag(gyms_path, :method => "get", class: "navbar-form", id: "search-form") do %>
		              <div class="input-append">
		              <%= text_field_tag :search_name, params[:search_name], class: "form-control", autocomplete: "off", placeholder: "Search By Name" %>
		              <%= text_field_tag :search_city, params[:search_city], class: "form-control", autocomplete: "off", placeholder: "Search By City" %>
		                <button class="btn btn-danger" type="submit"><i class="glyphicon glyphicon-search"></i></button>
		              </div>
		              <% end %>
		          </li>
		        </ul>
		      </div>
		    </div>
	 		 </div>
	 		</div>
		</div>
	  <!-- end search bar -->
		<div class="row">
			<div class="col-md-6 col-md-offset-2">
			<h1><strong><%= @welcome %></strong></h1>
			<% @gyms.each do |gym| %>
				<div class="table-responsive">
					<div class="table table-condensed">
						<table style="width:100%">
				  		<tr> 
				  			<td><h4><%= link_to gym.name, gym_path(gym.id) %></h4></td>
				  			<td align="right"><%= gym.distance_to(request.location) %> miles </td>
				  		</tr>
				  		<tr>
				  			<td><%= gym.address %></td>
				  			<td></td>
				  		</tr>
				  		<tr>
				  			<td><%= gym.website %></td>
				  			<td align="right"><em><%= gym.reviews.count %> Reviews</em></td>
				  		</tr>
				  	</table>
				  </div>
				 </div>
				<% end %>	
			</div>	
		</div>
	</div>
</div>

